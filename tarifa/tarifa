import java.util.*;

public class tarifa{
  public static void main(String[] args){
    Scanner input = new Scanner(System.in);
    int data = input.nextInt();
    int months = input.nextInt(); 
    int total=0;
    for(int i=0; i < months; i++){
      total = total + data - input.nextInt();
    }
    System.out.println(total+data);
    input.close();
  }
}
